<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context="com.planetjup.widget.MainActivity">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/preview"
                android:layout_margin="15dp"
                android:layout_columnWeight="1"
                style="@style/linearLayout">

                <TextView
                    android:id="@+id/previewTextDay"
                    style="@style/textViewDay" />

                <TextView
                    android:id="@+id/previewTextDate"
                    style="@style/textViewDate" />

                <TextView
                    android:id="@+id/previewTextEvent"
                    style="@style/textViewEvent" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@drawable/gradient_title"
                android:text="@string/advice_save" />
        </GridLayout>

        <TextView
            android:id="@+id/seekBarTitle"
            style="@style/radioTitle"
            android:layout_marginTop="15dp"
            android:text="@string/seek_bar_title" />

        <TextView
            android:id="@+id/textViewSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/advice_seekDefault"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="1dp" />

        <LinearLayout
            android:id="@+id/radioGroupPlaceHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

</LinearLayout>