<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context="com.planetjup.widget.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seekBarTitle"
            style="@style/radioTitle"
            android:text="@string/seek_bar_title" />

        <TextView
            android:id="@+id/textViewSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="0"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/seekbar_thumb"
            android:thumbOffset="1dp" />
    </LinearLayout>

    <com.planetjup.widget.CustomRadioGroup
        android:id="@+id/bgColorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        custom:radioGroupName="BackGround"
        custom:radioGroupTitle="@string/advice_backgroundColor" />

    <com.planetjup.widget.CustomRadioGroup
        android:id="@+id/dayColorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        custom:radioGroupName="BackGround"
        custom:radioGroupTitle="@string/advice_dayColor" />

    <com.planetjup.widget.CustomRadioGroup
        android:id="@+id/dateColorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        custom:radioGroupName="BackGround"
        custom:radioGroupTitle="@string/advice_dateColor" />

    <com.planetjup.widget.CustomRadioGroup
        android:id="@+id/eventColorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        custom:radioGroupName="BackGround"
        custom:radioGroupTitle="@string/advice_eventColor" />

    <com.planetjup.widget.CustomRadioGroup
        android:id="@+id/todayColorSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        custom:radioGroupName="BackGround"
        custom:radioGroupTitle="@string/advice_todayColor" />

</LinearLayout>