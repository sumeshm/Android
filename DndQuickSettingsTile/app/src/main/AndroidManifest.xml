<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.planetjup.dnd">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/ic_dnd_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dnd_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".DndMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DndPopupActivity"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>

        <service
            android:name=".DndTileService"
            android:icon="@drawable/ic_dnd_tile_off"
            android:label="@string/tile_name"
            android:enabled="true"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

</manifest>