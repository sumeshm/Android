<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.planetjup.dnd.DndTileService">

    <TextView
        android:id="@+id/advice_mode"
        style="@style/dnd_text_advice"
        android:text="@string/advice_mode"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_group_mode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advice_mode">

        <RadioButton
            android:id="@+id/radio_total"
            style="@style/dnd_radio_button"
            android:checked="true"
            android:text="@string/Filter_Total" />

        <RadioButton
            android:id="@+id/radio_priority"
            style="@style/dnd_radio_button"
            android:text="@string/Filter_Priority" />

        <RadioButton
            android:id="@+id/radio_alarm"
            style="@style/dnd_radio_button"
            android:text="@string/Filter_Alarm" />
    </RadioGroup>

    <TextView
        android:id="@+id/advice_duration"
        style="@style/dnd_text_advice"
        android:text="@string/advice_duration"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_mode" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_group_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advice_duration">

        <RadioButton
            android:id="@+id/radio_15"
            style="@style/dnd_radio_button"
            android:onClick="onClick"
            android:text="@string/Min_15" />

        <RadioButton
            android:id="@+id/radio_30"
            style="@style/dnd_radio_button"
            android:onClick="onClick"
            android:text="@string/Min_30" />

        <RadioButton
            android:id="@+id/radio_60"
            style="@style/dnd_radio_button"
            android:onClick="onClick"
            android:text="@string/Min_60" />

        <RadioButton
            android:id="@+id/radio_infinity"
            style="@style/dnd_radio_button"
            android:onClick="onClick"
            android:text="@string/Min_infinity" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="120"
        app:layout_constraintEnd_toStartOf="@+id/buttonOk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_time" />

    <TextView
        android:id="@+id/textViewSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/Min_0"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/buttonOk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Button
        android:id="@+id/buttonOk"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_round"
        android:onClick="onClick"
        android:text="@string/Go"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_time" />

    <TextView
        android:id="@+id/advice_mute"
        style="@style/dnd_text_advice"
        android:text="@string/advice_mute"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSeek" />

    <Button
        android:id="@+id/buttonAlarm"
        style="@style/dnd_button_mute"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@android:drawable/ic_lock_silent_mode"
        android:text="@string/Mute_alarm"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advice_mute" />

    <Button
        android:id="@+id/buttonMusic"
        style="@style/dnd_button_mute"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@android:drawable/ic_lock_silent_mode"
        android:text="@string/Mute_media"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advice_mute" />

    <Button
        android:id="@+id/buttonRinger"
        style="@style/dnd_button_mute"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@android:drawable/ic_lock_silent_mode"
        android:text="@string/Mute_ringer"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advice_mute" />

</android.support.constraint.ConstraintLayout>
