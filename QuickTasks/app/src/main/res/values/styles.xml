<resources >

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorOrange</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="alertButtonColor">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/alertButtonColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertButtonColor</item>
    </style>

    <!-- App Theme -->
    <style name="pickerText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="numberPicker" parent="android:Widget.Material.Light.NumberPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

</resources>
