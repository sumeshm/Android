<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorOrange</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="alertButtonColor">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/alertButtonColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/alertButtonColor</item>
    </style>

</resources>
